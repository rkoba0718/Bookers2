<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url: "/users/#{@user.id}", local:true do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h3>
              <% if @user.errors.count > 1 %>
                <%= @user.errors.count %> errors prohibited this book from being saved:
              <% else %>
                <%= @user.errors.count %> error prohibited this book from being saved:
              <% end %>
            </h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <% if @user.errors.any? %>
            <div class="field_with_errors">
              <label for="user_name">Name</label>
            </div>
            <div class="field_with_errors">
              <label for="user_name"><%= f.text_field :name, class: 'form-control user_name', id: 'user_name' %></label>
            </div>
          <% else %>
            <label for="user_name">Name</label>
            <%= f.text_field :name, class: 'form-control user_name', id: 'user_name'%>
          <% end %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, class: 'form-control user_introduction', id: 'user_introduction' %>
        </div>
        <div class="form-group">
            <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>