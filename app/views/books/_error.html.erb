<% if model.errors.any? %>
  <div id="error_explanation">
    <h3>
      <% if model.errors.count > 1 %>
        <%= model.errors.count %> errors prohibited this obj from being saved:
      <% else %>
        <%= model.errors.count %> error prohibited this obj from being saved:
      <% end %>
    </h3>
    <ul>
      <% model.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>