<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'books/error', model: @book %>

      <%= form_with model: @book, url: "/books/#{@book.id}", local:true do |f| %>
        <div class="form-group">
          <% if @book.errors.any? %>
            <div class="field_with_errors">
              <label for="book_title">Title</label>
            </div>
            <div class="field_with_errors">
              <%= f.text_field :title, class: 'form-control book_title', id: 'book_title' %>
            </div>
          <% else %>
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: 'form-control book_title', id: 'book_title'%>
          <% end %>
        </div>
        <div class="form-group">
          <% if @book.errors.any? %>
            <div class="field_with_errors">
              <label for="book_body">Opinion</label>
            </div>
            <div class="field_with_errors">
              <%= f.text_area :body, class: 'form-control book_body', id: 'book_body' %>
            </div>
          <% else %>
            <label for="book_body">Opinion</label>
            <%= f.text_area :body, class: 'form-control book_body', id: 'book_body' %>
          <% end %>
        </div>
        <div class="form-group">
            <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
      |
      <%= link_to "Back", books_path, class: "book_#{@book.id}" %>
    </div>
  </div>
</div>